{
   "id":"chuck-jokes",
   "apps":[
      {
         "id":"service",
         "dependencies":[
            "/chuck-jokes/database"
         ],
         "cpus":0.25,
         "mem":1024,
         "instances":2,
         "container":{
            "type":"DOCKER",
            "docker":{
               "image":"unterstein/dcos-for-java-devs-service",
               "network":"BRIDGE",
               "forcePullImage":true,
               "portMappings":[
                  {
                     "hostPort":0,
                     "containerPort":8080,
                     "protocol":"tcp"
                  }
               ]
            }
         },
         "env":{
            "SPRING_DATASOURCE_URL":"jdbc:mysql://3.3.0.6:3306/chuck?user=chuck&password=norris",
            "SERVICE_VERSION": "3"
         }
      },
      {
         "id":"database",
         "cpus":1,
         "mem":1024,
         "instances":1,
         "container":{
            "type":"DOCKER",
            "docker":{
               "image":"unterstein/dcos-for-java-devs-database",
               "network":"BRIDGE",
               "portMappings":[
                  {
                     "hostPort":0,
                     "containerPort":3306,
                     "protocol":"tcp",
                     "labels":{
                        "VIP_0":"3.3.0.6:3306"
                     }
                  }
               ]
            }
         }
      }
   ]
}